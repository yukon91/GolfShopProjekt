@page
@model GolfShopHemsida.Pages.ShopModel
@using GolfShopHemsida.Pages.Items
@{
	ViewData["Title"] = "Shop";
}
@{
}
<!DOCTYPE html>
<html lang="se">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop</title>
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/ShopCSS/style1.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
          rel="stylesheet">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
</head>
<body>
    <main>
        <div class="shop-background">
            <div class="shop">Välkommen till våran shop</div>

            <section class="produkter">
                @foreach (var item in Model.Items)
                {
                    <div class="produkt">
                        <img src="@item.ImageUrl" alt="@item.Name">
                        <h2>@item.Name</h2>
                        <p>@item.Price.ToString("0") kr</p>
                        @if (item.Stock > 0)
                        {
                            <form method="post" asp-page-handler="AddToCart">
                                <input type="hidden" name="itemId" value="@item.ItemId" />
                                <button type="submit">Lägg i kundvagn</button>
                            </form>
                        }
                        else
                        {
                            <button class="out-of-stock" disabled>Slut i lager</button>
                        }
                    </div>
                }
            </section>
        </div>
    </main>

    <script>
        const isLoggedIn = @(User.Identity?.IsAuthenticated.ToString().ToLower() ?? "false");

        document.querySelectorAll('form button[type="submit"]').forEach(button => {
            button.addEventListener('click', function(e) {
                if (!isLoggedIn) {
                    e.preventDefault();
                    alert('Vänligen logga in eller skapa konto för att lägga till en produkt i kundvagnen.');
                }
            });
        });

        // Show success message when item is added
        if (window.location.search.includes('added=true')) {
            alert('Produkten har lagts till i din kundvagn!');
        }
    </script>
</body>
</html>