@page
@model GolfShopHemsida.Pages.Admin.ProductManagementModel

<h3>Produkthantering</h3>

<table class="table">
    <thead>
        <tr>
            <th>Namn</th>
            <th>Pris</th>
            <th>Lager</th>
            <th>Ta bort</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>
                    <form method="post" asp-page-handler="Delete">
                        <input type="hidden" name="id" value="@item.ItemId" />
                        <button type="submit" class="btn btn-danger">Ta bort</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<h4>Lägg till produkt</h4>
<form method="post" asp-page-handler="Add">
    <div class="form-group">
        <label for="Name">Namn</label>
        <input type="text" id="Name" name="NewItem.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Price">Pris</label>
        <input type="number" id="Price" name="NewItem.Price" class="form-control" step="0.01" />
    </div>
    <div class="form-group">
        <label for="Stock">Lager</label>
        <input type="number" id="Stock" name="NewItem.Stock" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Lägg till produkt</button>
</form>