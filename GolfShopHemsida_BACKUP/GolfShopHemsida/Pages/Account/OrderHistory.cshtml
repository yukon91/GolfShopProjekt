@page
@model OrderHistoryModel
@{
    ViewData["Title"] = "Order History";
}

<!DOCTYPE html>
<html lang="se">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Member</title>
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/MemberCSS/member.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
</head>
<body>
    <div class="container mt-4">
        <div class="order-history-wrapper">
            <h2 class="text-center text-white mb-4">Order History</h2>

            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Order #1</h5>
                    <p class="card-text">Date: <strong>01/01/2025</strong></p>
                    <p class="card-text">Total Price: <strong>$120.00</strong></p>
                    <a href="#" class="btn btn-primary">View Details</a>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Order #2</h5>
                    <p class="card-text">Date: <strong>02/01/2025</strong></p>
                    <p class="card-text">Total Price: <strong>$45.50</strong></p>
                    <a href="#" class="btn btn-primary">View Details</a>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Order #3</h5>
                    <p class="card-text">Date: <strong>03/01/2025</strong></p>
                    <p class="card-text">Total Price: <strong>$70.30</strong></p>
                    <a href="#" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>